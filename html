                <button class="btn" onclick="calcInput.value += '3'">3</button>
                <button class="btn" onclick="calcInput.value += '-'">-</button>
                <button class="btn" onclick="calcInput.value += '0'">0</button>
                <button class="btn" onclick="calcInput.value += '.'">.</button>
                <button class="btn" onclick="calculate()">=</button>
                <button class="btn" onclick="calcInput.value += '+'">+</button>
            </div>
        </div>
